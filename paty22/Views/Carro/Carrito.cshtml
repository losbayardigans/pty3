@model List<paty22.Models.Carro>
@{
    ViewData["Title"] = "Carrito de Compras";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<style>
    body {
        background-color: #f8f9fa; 
        font-family: Arial, sans-serif;
    }

    .carrito-container {
        max-width: 800px; 
        margin: 20px auto; 
        background-color: #ffffff; 
        padding: 20px;
        border-radius: 10px; 
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
    }

    h2 {
        text-align: center;
        color: #333333; 
        font-size: 1.8rem;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            text-align: center;
            padding: 10px;
            border-bottom: 1px solid #cccccc; 
        }

        .table th {
            background-color: #f2f2f2; 
            font-weight: bold;
            color: #555555; 
        }

        .table td {
            color: #333333; 
        }

    .btn {
        font-size: 0.9rem;
        padding: 8px 12px;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #333333; 
        color: #ffffff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #555555; 
        }

    .btn-danger {
        background-color: #ff4d4d; 
        color: #ffffff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #cc0000; 
        }

    .btn-secondary {
        background-color: #dddddd; 
        color: #333333;
    }

    .btn-warning {
        background-color: #f0ad4e; 
        color: #ffffff;
    }

    .total-container {
        text-align: right;
        margin-top: 20px;
        font-size: 1.2rem;
        color: #333333; 
    }

    .empty-cart {
        text-align: center;
        font-size: 1rem;
        color: #777777; 
        margin-top: 20px;
    }
   
    .btn-eliminar {
        background: none;
        border: none;
        color: #d9534f; 
        font-size: 20px;
        cursor: pointer; 
        transition: transform 0.3s ease, color 0.3s ease; 
        padding: 5px; 
    }

        
        .btn-eliminar:hover {
            color: #c9302c; 
            transform: scale(1.2); 
        }

        
        .btn-eliminar i {
            font-size: 20px; 
            vertical-align: middle; 
        }
  
    .btn-modificar {
        background: none;
        border: none;
        color: #007bff; 
        font-size: 18px; 
        cursor: pointer;
        padding: 5px;
        transition: transform 0.3s ease, color 0.3s ease;
    }

        
        .btn-modificar:hover {
            color: #0056b3; 
            transform: scale(1.2); 
        }

        .btn-modificar i {
            font-size: 18px; 
            vertical-align: middle; 
        }


</style>

<div class="carrito-container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Producto.Nombre</td>
                        <td>@item.Producto.Precio.ToString("C", new System.Globalization.CultureInfo("es-CL"))
                        </td>
                        <td>
                            <form method="post" action="@Url.Action("ModificarCantidad", "Carro")" style="display: inline-block;">
                                <input type="hidden" name="productoId" value="@item.ProductoId" />
                                <input type="number" name="cantidad" value="@item.Cantidad" min="1" class="form-control" style="width: 70px; display: inline-block;" />
                                <button type="submit" class="btn-modificar">
                                    <i class="fas fa-pencil-alt"></i> 
                                </button>
                            </form>
                        </td>

                        <td>@((item.Producto.Precio * item.Cantidad).ToString("N0"))</td>
                        <td>
                            <form method="post" action="@Url.Action("EliminarDelCarrito", "Carro")">
                                <input type="hidden" name="carroId" value="@item.Id" />
                                <button type="submit" class="btn-eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>


                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-container">
            Total de productos: @ViewBag.Total.ToString("C", new System.Globalization.CultureInfo("es-CL"))

        </div>
    }
    else
    {
        <p class="empty-cart">No tienes productos en el carrito.</p>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Productos")" class="btn btn-secondary">Seguir comprando</a>
        <a href="@Url.Action("ConfirmarCompra", "Carro")" class="btn btn-warning">Confirmar compra</a>
    </div>
</div>
