@model paty22.Models.PedidoPagoViewModel

@{
    ViewData["Title"] = "Confirmar Pedido";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        color: #333;
    }
    .precio{
        margin:2px;
    }
    .container {
        display: flex;
        justify-content: space-between;
        margin: 40px auto;
        padding: 20px;
        max-width: 1200px;
    }

    .cliente-container {
        width: 65%;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .pedido-container {
        width: 30%;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #2d2d2d;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    .pedido-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #e0e0e0;
    }

        .pedido-item .producto-info {
            flex: 1;
            padding-left: 10px;
        }

            .pedido-item .producto-info p {
                margin: 0;
                font-size: 1rem;
                color: #333;
            }

        .pedido-item .precio {
            font-weight: bold;
            font-size: 1.2rem;
            color: #333;
            margin-top: 10px; /* Ajustado para mayor espacio */
        }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-size: 1.1rem;
        font-weight: bold;
        color: #444;
    }

    input, select {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        color: #333;
        border-radius: 8px;
        border: 1px solid #ccc;
        margin-top: 5px;
        background-color: #f7f7f7;
    }

        input:focus, select:focus {
            border-color: #007bff;
            outline: none;
        }

    .btn {
        display: block;
        width: 100%;
        padding: 12px;
        background-color: #333;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #555;
        }

    .pedido-item:last-child {
        border-bottom: none;
    }

    /* Ajustes al total */
    .total-container {
        margin-top: 20px; /* Mayor espacio arriba del total */
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        padding: 15px 0;
        border-top: 2px solid #e0e0e0; /* Línea separadora */
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fff;
        margin: 10% auto;
        padding: 20px;
        border-radius: 8px;
        width: 40%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .btn-secondary {
        background-color: #bbb;
        color: #fff;
    }
</style>

<!-- Contenedor principal -->
<div class="container">

    <!-- Formulario de Cliente -->
    <div class="cliente-container">
        <h3>Información de Contacto</h3>
        <form method="post" asp-action="ConfirmarCompra">
            <div class="form-group">
                <label for="Nombre">Nombre:</label>
                <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" required />
            </div>
            <div class="form-group">
                <label for="Telefono">Teléfono:</label>
                <input type="text" id="Telefono" name="Telefono" value="@Model.Telefono" required />
            </div>
            <div class="form-group">
                <label for="Direccion">Dirección:</label>
                <input type="text" id="Direccion" name="Direccion" value="@Model.Direccion" required />
            </div>

            <!-- Método de Pago -->
            <div class="form-group">
                <label for="PagoMetodo">Método de Pago:</label>
                @Html.DropDownListFor(
                         model => model.Pago.MetodoPago,
                         new List<SelectListItem>
                {
                new SelectListItem { Text = "Seleccione un método de pago", Value = "" },
                new SelectListItem { Text = "Tarjeta", Value = "Tarjeta" },
                new SelectListItem { Text = "Efectivo", Value = "Efectivo" },
                new SelectListItem { Text = "PayPal", Value = "PayPal" },
                new SelectListItem { Text = "Bit-Coin", Value = "Bit-Coin" }
                },
                         "Seleccione un método de pago",
                         new { @class = "form-control", @id = "PagoMetodo", onchange = "mostrarModal()" }
                         )
            </div>

            <!-- Campo para mostrar el monto total -->
            <div class="form-group">
                <label for="PagoMonto">Total:</label>
                <input type="text" id="PagoMonto" name="Pago.Monto" value="@ViewBag.Total.ToString("C", new System.Globalization.CultureInfo("es-CL"))" disabled />
            </div>

            <!-- Campos ocultos para los datos de la tarjeta -->
            <input type="hidden" id="HiddenNumeroTarjeta" name="NumeroTarjeta" />
            <input type="hidden" id="HiddenFechaExpiracion" name="FechaExpiracion" />
            <input type="hidden" id="HiddenCVV" name="CVV" />

            <!-- Botón para confirmar compra -->
            <button type="submit" class="btn">Confirmar Compra</button>
        </form>
    </div>

    <!-- Detalles del Pedido -->
    <div class="pedido-container">
        <h3>Detalles de tu Pedido</h3>
        <div>
            @if (Model.PedidoProductos != null && Model.PedidoProductos.Any())
            {
                @foreach (var pedidoProducto in Model.PedidoProductos)
                {
                    <div class="pedido-item">
                        <div class="producto-info">
                            <p><strong>Producto:</strong> @pedidoProducto.Producto.Nombre</p>
                            <p><strong>Cantidad:</strong> @pedidoProducto.Cantidad</p>
                            <p><strong>Precio Unitario:</strong> @pedidoProducto.Producto.Precio.ToString("C", new System.Globalization.CultureInfo("es-CL"))</p>
                        </div>
                        <div class="precio">
                            <p>
                                Total:   @string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C}", pedidoProducto.Cantidad * pedidoProducto.Producto.Precio)
                              
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No hay productos en el pedido.</p>
            }
        </div>

        <!-- Total a Pagar -->
       
    </div>
</div><!-- Modal para ingresar detalles de la tarjeta -->
<div class="modal" id="TarjetaModal">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Detalles de la Tarjeta</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar" onclick="cerrarModal()">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="NumeroTarjeta">Número de Tarjeta:</label>
                <input type="text" class="form-control" id="NumeroTarjeta" />
            </div>
            <div class="form-group">
                <label for="FechaExpiracion">Fecha de Expiración (MM/AAAA):</label>
                <input type="text" class="form-control" id="FechaExpiracion" />
            </div>
            <div class="form-group">
                <label for="Cvv">CVV:</label>
                <input type="text" class="form-control" id="Cvv" />
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="cerrarModal()">Cerrar</button>
            <button type="button" class="btn btn-primary" id="GuardarDatosTarjeta">Guardar</button>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Función para mostrar el modal cuando se selecciona "Tarjeta" como método de pago
        function mostrarModal() {
            var metodoPago = document.getElementById("PagoMetodo").value;  // Obtener el valor seleccionado
            if (metodoPago === "Tarjeta") {
                document.getElementById("TarjetaModal").style.display = "block";  // Mostrar el modal
            } else {
                cerrarModal();  // Cerrar el modal si no se selecciona "Tarjeta"
            }
        }

        // Asignar el evento onchange al dropdown para mostrar el modal
        const pagoMetodoSelect = document.getElementById("PagoMetodo");
        pagoMetodoSelect.addEventListener("change", mostrarModal);

        // Función para cerrar el modal
        function cerrarModal() {
            const modal = document.getElementById("TarjetaModal");
            modal.style.display = "none";  // Ocultar el modal
        }

        // Evento para cerrar el modal cuando se hace clic fuera de él
        window.onclick = function (event) {
            const modal = document.getElementById("TarjetaModal");
            if (event.target === modal) {
                cerrarModal();
            }
        };

        // Evento del botón "Guardar" para guardar los datos de la tarjeta
        const guardarBtn = document.getElementById("GuardarDatosTarjeta");

        guardarBtn.addEventListener("click", function () {
            // Recoger los valores de los campos de la tarjeta
            const numeroTarjeta = document.getElementById("NumeroTarjeta").value;
            const fechaExpiracion = document.getElementById("FechaExpiracion").value;
            const cvv = document.getElementById("Cvv").value;

            // Verificar si los campos están vacíos
            if (!numeroTarjeta || !fechaExpiracion || !cvv) {
                alert("Por favor, complete todos los campos.");
                return;
            }

            // Llenar los campos ocultos del formulario con los valores de la tarjeta
            document.getElementById("HiddenNumeroTarjeta").value = numeroTarjeta;
            document.getElementById("HiddenFechaExpiracion").value = fechaExpiracion;
            document.getElementById("HiddenCVV").value = cvv;

            // Enviar el formulario después de guardar los datos de la tarjeta
            document.forms[0].submit(); // Enviar el formulario de manera programática

            // Cerrar el modal después de guardar los datos
            cerrarModal();
        });

    });

</script>
