@model paty22.Models.Cliente
@{
    ViewData["Title"] = "Login";
}
<html>
    <head>

    <script src="~/js/Login.js"></script>

    </head>
<style>
    /* Estilo ya proporcionado */
    body {
        background-color: #f8f9fa;
        color: #333333;
        font-family: Arial, sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 20px;
        border: 1px solid #cccccc;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .login-container h1 {
        font-size: 1.5rem;
        font-weight: bold;
        color: #000000;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-label {
        font-weight: bold;
        color: #555555;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        border: 1px solid #bbbbbb;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 15px;
    }

    .form-control:focus {
        border-color: #666666;
        box-shadow: none;
    }

    .btn-submit {
        width: 100%;
        background-color: #333333;
        color: #ffffff;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-submit:hover {
        background-color: #555555;
    }

    .alert-danger {
        font-size: 0.9rem;
        border-radius: 5px;
        color: red;
    }
</style>
<body>
<div class="login-container">
    <h1>Login</h1>

    <!-- Mensaje de error si hay algún problema -->
    <div id="error-message" class="alert-danger" style="display: none;"></div>

    <form id="Login" method="post" asp-action="Login">
        <label for="email" class="form-label">Correo electrónico:</label>
        <input type="email" id="email" name="email" class="form-control" required />

        <label for="contrasena" class="form-label">Contraseña:</label>
        <input type="password" id="contrasena" name="contrasena" class="form-control" required />

        <button type="submit" class="btn-submit">Iniciar sesión</button>
    </form>
</div>
    <script src="~/js/Login.js"></script>
</body>
</html>