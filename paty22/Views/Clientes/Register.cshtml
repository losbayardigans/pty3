@model paty22.Models.Cliente

@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        background-color: #f8f9fa; /* Fondo gris claro */
        color: #333333; /* Texto en gris oscuro */
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 400px; /* Formulario más pequeño */
        margin: 50px auto; /* Centrado vertical y horizontal */
        background-color: #ffffff; /* Fondo blanco */
        padding: 20px;
        border: 1px solid #cccccc; /* Borde gris claro */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra sutil */
    }

        .form-container h2 {
            font-size: 1.5rem;
            font-weight: bold;
            color: #000000; /* Negro */
            margin-bottom: 20px;
            text-align: center;
        }

    .form-label {
        font-weight: bold;
        color: #555555; /* Gris medio */
    }

    .form-control {
        border: 1px solid #bbbbbb; /* Bordes grises */
        border-radius: 5px; /* Bordes suaves */
        padding: 10px;
    }

        .form-control:focus {
            border-color: #666666; /* Bordes gris oscuro al enfocar */
            box-shadow: none; /* Sin sombra al enfocar */
        }

    .btn-submit {
        background-color: #333333; /* Gris oscuro */
        color: #ffffff; /* Blanco */
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #555555; /* Gris medio */
        }

    .alert-danger {
        font-size: 0.9rem;
        border-radius: 5px;
    }

    ul {
        padding-left: 20px;
    }
</style>

<div class="form-container">
    <h2>Registro de Cliente</h2>

    <form method="post">
        <div class="form-group mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" name="Nombre" id="Nombre" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="Email" class="form-label">Correo Electrónico</label>
            <input type="email" name="Email" id="Email" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="Telefono" class="form-label">Teléfono</label>
            <input type="text" name="Telefono" id="Telefono" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label for="Contrasena" class="form-label">Contraseña</label>
            <input type="password" name="Contrasena" id="Contrasena" class="form-control" required />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-submit">Registrar</button>
        </div>
    </form>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger mt-4">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</div>