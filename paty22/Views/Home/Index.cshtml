@{
    ViewData["Title"] = "Home Page";
}
<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<head>
    <title>@ViewData["Title"]</title>
    <style>


        body, ul, li, p, a, label, input, div {
            font-size: 18px !important;
            font-weight: 300 !important;
        }

        .h1 {
            font-size: 48px !important;
            font-weight: 200 !important;
        }

        .h2 {
            font-size: 30px !important;
            font-weight: 300;
            color: red !important; /* Color rojo para .h2 */
        }

        #template-mo-zay-hero-carousel .carousel-indicators li {
            margin-top: -50px;
            background-color: black;
        }

        #template-mo-zay-hero-carousel {
            background-color: white;
        }
        #template-mo-zay-hero-carousel .carousel-control-next i,
        #template-mo-zay-hero-carousel .carousel-control-prev i {
            color: #000000 !important;
            font-size: 2.8em !important;
        }

        .carousel {
            margin-top: 20px;
        }

        /* Estilos de los servicios */
        .services-section {
            padding: 40px 0;
            text-align: center;
        }

        .service-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            padding: 20px;
            transition: transform 0.3s ease;
        }

            .service-card:hover {
                transform: translateY(-10px);
            }

        .service-icon {
            font-size: 50px;
            color: #007bff;
            margin-bottom: 15px;
        }

        .text-gris {
            color: #6c757d;
        }

        .text-dark {
            color: #343a40;
        }

        .lead {
            font-size: 1.25rem;
            font-weight: 300;
        }
    </style>
</head>

<body>

    <div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="@Url.Content("~/img/logo1.jpg")" alt="Logo 1">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left align-self-center">
                                <h1 class="h1 text-gris"><b>Patty</b> eCommerce</h1>
                                <p class="text-dark lead">
                                    ¡Bienvenido a Patty's eCommerce! 🌟 Descubre los productos más exclusivos, de alta calidad y a precios que no podrás resistir. ¡Haz tu compra hoy y vive una experiencia única de compra online! 🛍️
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="@Url.Content("~/img/logo2.jpg")" alt="Logo 2">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1 text-gris">Tu compra, tu elección</h1>
                                <p class="text-dark lead">
                                    ¡Tu compra, tu comodidad! 🛒 Con Patty's eCommerce, disfruta de un proceso de compra rápido, seguro y sin complicaciones. Encuentra lo que necesitas en un solo clic y recibe tu pedido con total confianza. 🚚
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="@Url.Content("~/img/logo3.jpg")" alt="Logo 3">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1 text-gris">Ofertas Especiales</h1>
                                <p class="text-dark lead">
                                    ¡Ofertas exclusivas solo para ti! 🚀 No pierdas la oportunidad de conseguir los productos más populares a precios irresistibles. ¡Haz tu compra ahora y disfruta de una experiencia única en Patty's eCommerce! 🛒
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
            <i class="fas fa-chevron-left"></i>
        </a>
        <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>

    
    <section class="container py-5">
        <div class="row text-center pt-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1 text-gris">Categorías Más Compradas</h1>
                <p>
                    Echa un vistazo a lo que más están comprando nuestros clientes. ¡Seguro encuentras algo que te guste, si necesitas ayuda puedes contactarnos!
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4 p-5 mt-3 d-flex flex-column align-items-center">
                <a href="#"><img src="@Url.Content("~/img/agua_mineral.jpg")" class="img-fluid w-100"></a>
                <h5 class="text-center mt-3 mb-3">Bebestibles</h5>
                <p class="text-center">
                    <a class="btn btn-dark" href="@Url.Action("Index", "Productos")">Ir a productos</a>
                </p>
            </div>

            <div class="col-12 col-md-4 p-5 mt-3">
                <a href="#"><img src="@Url.Content("~/img/chocolate_belga.jpg")" class="img-fluid border"></a>
                <h2 class="h5 text-center mt-3 mb-3">Comestibles</h2>
                <p class="text-center">
                    <a class="btn btn-dark" href="@Url.Action("Index", "Productos")">Ir a productos</a>
                </p>
            </div>
            <div class="col-md-4 p-5 mt-3">
                <a href="#"><img src="@Url.Content("~/img/ron_premium.jpg")" class="img-fluid border"></a>
                <h2 class="h5 text-center mt-3 mb-3">Bebidas Alcohólicas</h2>
                <p class="text-center">
                    <a class="btn btn-dark" href="@Url.Action("Index", "Productos")">Ir a productos</a>
                </p>
            </div>
        </div>
    </section>

    <section class="container py-5">
        <div class="row text-center pt-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1 text-gris">Síguenos en Redes Sociales</h1>
                <p>Conéctate con nosotros y mantente al día con las últimas novedades.</p>
            </div>
        </div>

        <div class="social-icons-container">

            <div class="instagram-v">

                <a href="https://www.instagram.com/una_persona_f0/" target="_blank" class="social-icon instagram">
                    <i class="fab fa-instagram fa-3x"></i>
                </a>
                <div class="social-icon facebook">
                    <a href="https://www.instagram.com" target="_blank"><i class="fab fa-facebook fa-3x"></i></a>
                </div>

                <a href="https://instagram.com/user2" target="_blank" class="social-icon instagram">
                    <i class="fab fa-instagram fa-3x"></i>
                </a>
            </div>

        </div>
    </section>
</body>
</html>
