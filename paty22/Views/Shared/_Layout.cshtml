    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script>
        $(document).ready(function () {
            // Activar tooltips de Bootstrap
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>


    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const favoritosBtn = document.getElementById('favoritosBtn');
            const favoritosModal = new bootstrap.Modal(document.getElementById('favoritosModal'));
            const favoritosList = document.getElementById('favoritosList');
            const favoritos = new Set(JSON.parse(localStorage.getItem('favoritos')) || []); // Usar localStorage para los favoritos

            // Mostrar los productos favoritos en el modal
            favoritosBtn.addEventListener('click', () => {
                favoritosList.innerHTML = ''; // Limpiar la lista de productos favoritos
                if (favoritos.size === 0) {
                    favoritosList.innerHTML = '<p>No tienes productos favoritos.</p>';
                } else {
                    // Aquí obtenemos los productos favoritos y los mostramos
                    const productosFavoritos = Array.from(favoritos);
                    productosFavoritos.forEach(productoId => {
                        // Buscar el producto por ID (esto depende de cómo tengas los productos en tu página)
                        const producto = document.querySelector(`.producto[data-id="${productoId}"]`);
                        if (producto) {
                            const productoNombre = producto.getAttribute('data-name');
                            const productoPrecio = producto.getAttribute('data-price');
                            const productoImagen = producto.querySelector('img').getAttribute('src');

                            // Crear el elemento para mostrar el producto favorito
                            const productoElemento = document.createElement('div');
                            productoElemento.classList.add('producto-favorito');
                            productoElemento.innerHTML = `
                                        <div class="row">
                                            <div class="col-4">
                                                <img src="${productoImagen}" alt="${productoNombre}" class="img-fluid">
                                            </div>
                                            <div class="col-8">
                                                <h5>${productoNombre}</h5>
                                                <p>$${productoPrecio}</p>
                                            </div>
                                        </div>
                                    `;
                            favoritosList.appendChild(productoElemento);
                        }
                    });
                }

                // Abrir el modal de favoritos
                favoritosModal.show();
            });
        });
    </script>
  
    <script src="@Url.Content("~/js/templatemo.js")"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
