<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Paty</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilos personalizados */
        body {
            background-color: #f8f9fa; /* Gris claro */
            color: #333333; /* Gris oscuro */
        }

        .custom-navbar {
            background-color: #ffffff; /* Blanco */
            border-bottom: 1px solid #cccccc; /* Línea gris clara */
        }

        .navbar-brand {
            font-weight: bold;
            color: #000000; /* Negro */
        }

            .navbar-brand:hover {
                color: #555555; /* Gris intermedio */
            }

        .navbar-nav .nav-link {
            color: #333333; /* Gris oscuro */
            font-size: 1.1rem;
            transition: color 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #000000; /* Negro */
            }

        .footer {
            background-color: #333333; /* Gris oscuro */
            color: #ffffff; /* Blanco */
            padding: 15px 0;
            text-align: center;
        }

            .footer a {
                color: #cccccc; /* Gris claro */
                text-decoration: none;
            }

                .footer a:hover {
                    color: #ffffff; /* Blanco */
                }

        /* Estilo de imagen del carrito */
        .nav-link img {
            height: 40px;
            transition: transform 0.3s ease-in-out;
        }

            .nav-link img:hover {
                transform: scale(1.1);
            }

        /* Botón del menú móvil */
        .navbar-toggler-icon {
            filter: invert(1); /* Hace el ícono blanco para fondo claro */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Paty</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Productos")">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Carrito", "Carro")">
                                <img src="~/img/carro.jpg" alt="Carrito de Compras" class="img-fluid" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ImportCsv", "Productos")">Importar Productos</a>
                        </li>
                        @if (Context.Session.GetInt32("ClienteId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Hola, @Context.Session.GetString("NombreCliente")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "Clientes")">Cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Clientes")">Registrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Clientes")">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <footer class="footer">
        <div class="container">
            &copy; 2024 Paty | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
